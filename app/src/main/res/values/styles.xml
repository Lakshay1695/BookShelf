<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSkyBlue</item>
        <item name="colorPrimaryDark">@color/colorSkyBlueDark</item>
        <item name="colorAccent">@color/colorCarrot</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="Theme.MyDialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:textColor">@color/colorSkyBlueDark</item>
        <item name="android:textColorAlertDialogListItem">@color/colorSkyBlue</item>
    </style>

</resources>
