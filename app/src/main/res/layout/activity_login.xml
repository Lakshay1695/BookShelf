<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/colorWhite"
    tools:context="es.esy.raghavwahi.bookshelf.LoginActivity">


    <ImageView
        android:layout_width="330dp"
        android:layout_height="83dp"
        android:background="@drawable/book_shelf_name"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextNameLogin"
        app:layout_constraintVertical_bias="0.655" />

    <EditText
        android:id="@+id/editTextNameLogin"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Enter Your Email Id"
        android:textColorHint="@color/colorSkyBlue"
        android:textColor="@color/colorCarrot"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:backgroundTint="@color/colorCarrot"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="122dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextPasswordLogin"
        app:layout_constraintVertical_bias="0.428" />

    <EditText
        android:id="@+id/editTextPasswordLogin"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Enter Your Password"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:textColorHint="@color/colorSkyBlue"
        android:textColor="@color/colorCarrot"
        android:backgroundTint="@color/colorCarrot"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="218dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogin"
        app:layout_constraintVertical_bias="0.193" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:text="Login"
        android:textColor="@color/colorCarrot"
        android:textSize="14sp"
        android:backgroundTint="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="313dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502" />

    <ImageView
        android:id="@+id/imageViewRegisterLink"
        android:layout_width="250dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/register_here"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.887" />

</android.support.constraint.ConstraintLayout>
