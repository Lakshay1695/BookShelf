<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="es.esy.raghavwahi.bookshelf.LoginActivity">


    <ImageView
        android:id="@+id/imageViewTitle"
        android:layout_width="346dp"
        android:layout_height="36dp"
        app:srcCompat="@drawable/book_shelf_name"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextNameLogin"
        app:layout_constraintVertical_bias="0.433" />

    <EditText
        android:id="@+id/editTextNameLogin"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Your Username/Email Id"
        android:textColorHint="@color/colorSkyBlue"
        android:textColor="@color/colorCarrot"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:backgroundTint="@color/colorCarrot"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="122dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextPasswordLogin"
        app:layout_constraintVertical_bias="0.428" />

    <EditText
        android:id="@+id/editTextPasswordLogin"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Enter Your Password"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:textColorHint="@color/colorSkyBlue"
        android:textColor="@color/colorCarrot"
        android:backgroundTint="@color/colorCarrot"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="218dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogin"
        app:layout_constraintVertical_bias="0.193" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:text="Login"
        android:textColor="@color/colorCarrot"
        android:textSize="14sp"
        android:backgroundTint="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="313dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewRegisterLogin"
        app:layout_constraintVertical_bias="0.101" />

    <TextView
        android:id="@+id/textViewRegisterLogin"
        android:layout_width="150dp"
        android:layout_height="21dp"
        android:text="New to Book Shelf?"
        android:textColor="@color/colorSkyBlue"
        android:gravity="end"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.983"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textViewRegisterLink"
        android:layout_width="150dp"
        android:layout_height="21dp"
        android:text="Register Here"
        android:textColor="@color/colorCarrot"
        android:gravity="start"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.982"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.942" />

</android.support.constraint.ConstraintLayout>
