<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="es.esy.raghavwahi.bookshelf.RegisterActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Your Name"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorCarrot"
        android:backgroundTint="@color/colorCarrot"
        android:textColorHint="@color/colorSkyBlue"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextName"
        android:ems="10"
        android:inputType="phone"
        android:hint="Enter Your Phone No."
        android:layout_marginTop="15dp"
        android:textColor="@color/colorCarrot"
        android:backgroundTint="@color/colorCarrot"
        android:textColorHint="@color/colorSkyBlue"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPhone"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Enter Your Email Id"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorCarrot"
        android:backgroundTint="@color/colorCarrot"
        android:textColorHint="@color/colorSkyBlue"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:fontFamily="sans-serif"
        android:hint="Enter Your Password"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/editTextEmail"
        android:textColor="@color/colorCarrot"
        android:backgroundTint="@color/colorCarrot"
        android:textColorHint="@color/colorSkyBlue"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editTextPasswordConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:fontFamily="sans-serif"
        android:hint="Confirm Your Password"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorCarrot"
        android:backgroundTint="@color/colorCarrot"
        android:textColorHint="@color/colorSkyBlue"
        android:layout_below="@+id/editTextPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/buttonRegister"
        android:gravity="center"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:layout_below="@+id/editTextPasswordConfirm"
        android:layout_centerHorizontal="true"
        android:text="Sign up"
        android:layout_marginTop="40dp"
        android:textColor="@color/colorCarrot"
        android:textSize="14sp"
        android:backgroundTint="@color/colorWhite"
        />

    <ImageView
        android:id="@+id/imageViewLoginLink"
        android:layout_width="250dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/login_here"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/buttonRegister"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

</ScrollView>
