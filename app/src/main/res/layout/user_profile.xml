<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:id="@+id/imageProPhoto"
            android:src="@drawable/profile_picture_sample"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/colorCarrot"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/imageProPhoto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:hint=" About Yourself"
            android:textSize="20sp"
            android:textColorHint="@color/colorSkyBlue"
            android:textColor="@color/colorCarrot"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textUserbio"
            android:background="@drawable/background_border_carrot"/>

        <Button
            android:id="@+id/buttonEditProfile"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textColor="@color/colorCarrot"
            android:text="Edit Profile"
            android:gravity="center"
            android:textSize="14sp"
            android:backgroundTint="@color/colorWhite"
            android:layout_marginTop="46dp"
            android:layout_below="@+id/textUserbio"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textColor="@color/colorWhite"
            android:text="Logout"
            android:gravity="center"
            android:textSize="14sp"
            android:backgroundTint="@color/colorSkyBlue"
            android:layout_marginTop="85dp"
            android:layout_below="@+id/buttonEditProfile"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:id="@+id/textuserNameDisplay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="Name of the user"
            android:textColor="@color/colorSkyBlue"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageProPhoto"
            android:layout_toEndOf="@+id/imageProPhoto"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="14dp" />

    </RelativeLayout>

</ScrollView>